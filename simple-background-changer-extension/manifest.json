{
    "manifest_version": 3,
    "name": "Color Background Changer",
    "version": "1.1",
    "description": "An extension to change background color to a user-selected color.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  